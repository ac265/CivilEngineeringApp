<Window x:Class="CivilEngineeringProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CivilEngineeringProject"
        xmlns:local1="clr-namespace:CivilEngineeringProject.ViewModel"
        Title="Metal Yönetimi" Height="450" Width="525">

    <Window.DataContext>
        <local1:MetalViewModel />
    </Window.DataContext>

    <Grid>
        <!-- Metal Ekleme -->
        <Button Content="Yeni Metal Ekle" Command="{Binding AddMetalCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Margin="10"/>

        <!-- Kullanılacak Metal Uzunluğunu Girme -->
        <TextBox Text="{Binding LengthToUse}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,60,10,10"/>

        <!-- Metal Kullanma Butonu -->
        <Button Content="Metal Kullan" Command="{Binding UseMetalCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Margin="10,110,10,10"/>

        <!-- Kalan Metaller Listesi -->
        <ListBox 
    ItemsSource="{Binding RemainingParts}" 
    DisplayMemberPath="RemainingLength" 
    HorizontalAlignment="Left" 
    VerticalAlignment="Top" 
    Width="200" 
    Height="200" 
    Margin="10,160,10,10"/>

        <!-- Kalan Metal Parçalarını Kullanma -->
        <Button Content="Kalan Metal Kullan" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Margin="10,380,10,10"/>
    </Grid>
</Window>
